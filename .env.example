# Cars360 Environment Configuration

# ======================
# Application Settings
# ======================
NODE_ENV=development
PORT=3000

# ======================
# API Configuration
# ======================
NEXT_PUBLIC_API_URL=http://localhost:8000
API_SECRET_KEY=your-super-secret-key-change-in-production

# ======================
# Stacks Blockchain
# ======================
NEXT_PUBLIC_STACKS_NETWORK=testnet
NEXT_PUBLIC_CONTRACT_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
STACKS_API_URL=https://api.testnet.hiro.so
DEPLOYER_PRIVATE_KEY=your-deployer-private-key

# ======================
# Database
# ======================
DATABASE_URL=postgresql://postgres:password@localhost:5432/cars360
REDIS_URL=redis://localhost:6379

# ======================
# IPFS Configuration
# ======================
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/

# ======================
# File Storage
# ======================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cars360-datasets

# ======================
# Email Configuration
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@cars360.ng
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@cars360.ng
EMAILS_FROM_NAME=Cars360

# ======================
# Security
# ======================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRE_HOURS=168
CORS_ORIGINS=http://localhost:3000,https://cars360.ng

# ======================
# Monitoring
# ======================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ======================
# Analytics
# ======================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ======================
# Social Media
# ======================
TWITTER_API_KEY=your-twitter-api-key
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# ======================
# Development Tools
# ======================
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT=false
ANALYZE=false
